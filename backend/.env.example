APP_NAME=Logistiga
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Africa/Libreville
APP_URL=http://localhost:8000

APP_LOCALE=fr
APP_FALLBACK_LOCALE=fr
APP_FAKER_LOCALE=fr_FR

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=logistiga
DB_USERNAME=root
DB_PASSWORD=

# ============================================
# Session & Cookies (Sanctum SPA Auth)
# ============================================
SESSION_DRIVER=cookie
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=none

# Le domaine du cookie session
# Si front et back sont sur des domaines différents avec SameSite=none, ceci doit correspondre au backend
SESSION_DOMAIN=.logistiga.com

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Configuration Email SMTP
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="contact@lojistiga.com"
MAIL_FROM_NAME="LOJISTIGA"
MAIL_REPLY_TO_ADDRESS=
MAIL_REPLY_TO_NAME=

# Archive des emails (copie cachée)
MAIL_ARCHIVE_ENABLED=false
MAIL_ARCHIVE_ADDRESS=

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# ============================================
# Sanctum (SPA Authentication)
# ============================================
# Domaines stateful (séparés par des virgules) - le front doit être listé ici
# IMPORTANT: Ne pas inclure le protocole (https://), juste le domaine
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:5173,60f20667-59d2-4f14-ba17-f1acde63f098.lovableproject.com,id-preview--60f20667-59d2-4f14-ba17-f1acde63f098.lovable.app,screen-clone-it.lovable.app,facturation.logistiga.com

# Expiration des tokens personnels (en minutes) - 7 jours
SANCTUM_TOKEN_EXPIRATION=10080

# ============================================
# CORS (Cross-Origin Resource Sharing)
# ============================================
# SECURITY: Ne pas utiliser '*' en production avec supports_credentials=true
# Origines supplémentaires (séparées par des virgules)
CORS_ALLOWED_ORIGINS=
# Patterns regex pour les previews Lovable (déjà inclus dans config/cors.php)
CORS_ALLOWED_ORIGINS_PATTERNS=

# Taux par défaut
TAUX_TVA=18
TAUX_CSS=1

# ============================================
# Connexion Base Logistiga OPS (READ ONLY)
# ============================================
# FAC lit les conteneurs traités et armateurs depuis OPS
# Synchronisation unidirectionnelle: OPS → FAC
OPS_DB_HOST=127.0.0.1
OPS_DB_PORT=3306
OPS_DB_DATABASE=logiwkuh_ops
OPS_DB_USERNAME=fac_reader
OPS_DB_PASSWORD=
