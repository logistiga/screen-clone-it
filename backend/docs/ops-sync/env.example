# ============================================================
# CONFIGURATION CONNEXION FACTURATION (READ ONLY)
# ============================================================
# Ajouter ces lignes dans le .env d'OPS
# (c:\xampp\htdocs\opration\backend\.env)
# ============================================================

# Connexion READ ONLY vers la base Facturation
FAC_DB_CONNECTION=mysql
FAC_DB_HOST=127.0.0.1
FAC_DB_PORT=3306
FAC_DB_DATABASE=facturation_db
FAC_DB_USERNAME=ops_reader
FAC_DB_PASSWORD=ChangezCeMotDePasse!Securise2024

# ============================================================
# CONFIGURATION OPTIONNELLE
# ============================================================

# Intervalle de synchronisation (en minutes) - utilisé par le scheduler
SYNC_FAC_INTERVAL=5

# Activer/désactiver la synchronisation automatique
SYNC_FAC_ENABLED=true

# Nombre de jours de logs à conserver
SYNC_FAC_LOG_RETENTION_DAYS=30
